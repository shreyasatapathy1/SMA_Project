@model SocialMediaApp.Models.ViewModel.PostViewModel


@{
    ViewData["Title"] = "Create Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a New Post</h2>
@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        @ViewData.ModelState[""].Errors[0].ErrorMessage
    </div>
}
<form asp-action="Create" asp-controller="Post" asp-area="User" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="TextContent" class="control-label">Write something</label>
<textarea class="form-control" name="TextContent" rows="3" placeholder="What's on your mind?"></textarea>

        <span asp-validation-for="TextContent" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="MediaFile" class="control-label">Upload Image/Video (optional)</label>
        @* <input asp-for="MediaFile" type="file" class="form-control" accept="image/*,video/*" /> *@
        <input type="file" name="MediaFile" class="form-control" accept="image/*,video/*" />

        <span asp-validation-for="MediaFile" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Post</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
