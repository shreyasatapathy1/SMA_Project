@model SocialMediaApp.Models.ViewModel.PostViewModel

@{
    ViewData["Title"] = "Create Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3>Create a New Post</h3>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-area="User" asp-controller="Post" asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="TextContent">Text</label>
            <textarea asp-for="TextContent" class="form-control" rows="4"></textarea>
            <span asp-validation-for="TextContent" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MediaFile">Attach Image/Video</label>
            <input asp-for="MediaFile" type="file" class="form-control" accept="image/*,video/*" />
            <span asp-validation-for="MediaFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
